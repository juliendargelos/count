<div class="container container--medium container--no-margins">
  <div class="box animation--fade-in-up <%= 'animation--now' if frame? %>">
    <div class="box__content">
      <h2 class="box__title">Referentials</h2>
    </div>
    <div class="box__content">
      <table class="table">
        <thead class="table__header">
          <tr class="table__row table__row--header table__row--no-border">
            <th class="table__cell table__cell--header">Man-day duration</th>
            <th class="table__cell table__cell--header">Work per day</th>
            <th class="table__cell"></th>
          </tr>
        </thead>
        <tbody class="table__body">
          <%= render @referentials %>
        </tbody>
      </table>
    </div>

    <div class="box__content">
      <table class="table">
        <thead class="table__header">
          <tr class="table__row table__row--header table__row--no-border">
            <th class="table__cell table__cell--header" colspan="2">
              <span class="box__title box__title--sub">New referential</span>
            </th>
          </tr>
        </thead>
        <tbody class="table__body">
          <%= render @referential, label: true %>
        </tbody>
      </table>
    </div>
  </div>
</div>
