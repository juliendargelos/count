<div class="container container--medium container--no-margins">
  <div class="box animation--fade-in-up <%= 'animation--now' if frame? %>">
    <div class="box__content">
      <h2 class="box__title">Taxes</h2>
    </div>
    <div class="box__content">
      <table class="table">
        <thead class="table__header">
          <tr class="table__row table__row--header table__row--no-border">
            <th class="table__cell table__cell--header">Name</th>
            <th class="table__cell table__cell--header">Percentage</th>
            <th class="table__cell"></th>
          </tr>
        </thead>
        <tbody class="table__body">
          <%= render @taxes %>
        </tbody>
      </table>
    </div>

    <div class="box__content">
      <table class="table">
        <thead class="table__header">
          <tr class="table__row table__row--header table__row--no-border">
            <th class="table__cell table__cell--header" colspan="2">
              <span class="box__title box__title--sub">New tax</span>
            </th>
          </tr>
        </thead>
        <tbody class="table__body">
          <%= render @tax, label: true %>
        </tbody>
      </table>
    </div>
  </div>
</div>
